{
  "name": "calsci-extension",
  "displayName": "Calsci Extension",
  "description": "Micropython Calsci Extension fro ESP32",
  "version": "0.0.2",
  "publisher": "calsci",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "calsci.openHome",
        "title": "Calsci: Open Home"
      },
      {
        "command": "calsci.showMenu",
        "title": "Calsci: Show Menu"
      },
      {
        "command": "calsci.checkStatus",
        "title": "Calsci: Check Device Status"
      },
      {
        "command": "calsci.makeApp",
        "title": "Calsci: Make App"
      },
      {
        "command": "calsci.uploadCode",
        "title": "Calsci: Upload Code"
      },
      {
        "command": "calsci.deviceInfo",
        "title": "Calsci: Device Info"
      },
      {
        "command": "calsci.openRepl",
        "title": "Calsci: Open REPL"
      },
      {
        "command": "calsci.fetchApps",
        "title": "Calsci: Fetch Installed Apps"
      },
      {
        "command": "calsci.openApp",
        "title": "Open Installed App"
      },
      {
        "command": "calsci.checkEnv",
        "title": "Calsci: Check Environment",
        "category": "Calsci"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "calsciSidebar",
          "title": "Calsci",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "calsciSidebar": [
        {
          "id": "calsciView",
          "name": "Calsci App Builder"
        },
        {
          "id": "calsciAppsView",
          "name": "Installed Apps"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0"
  },
  "dependencies": {
    "serialport": "^13.0.0"
  }
}
